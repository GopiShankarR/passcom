generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Rule {
  id           String   @id @default(cuid())
  title        String   @unique        // <-- unique for upsert
  jurisdiction String                 // "federal" | "state:CA" | "city:IL-Chicago"
  category     String                 // "employment" | "privacy" | "safety" | ...
  version      Int      @default(1)
  validFrom    DateTime @default(now())
  validTo      DateTime?
  condition    Json                   // JSONLogic
  obligations  Json                   // [{action, description, ...}]
  citations    Json                   // [{name, section, url}]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Session {
  id              String        @id @default(cuid())
  idempotencyKey  String        @unique
  profile         Json
  createdAt       DateTime      @default(now())
  evaluations     Evaluation[]  // <-- back relation added
}

model Evaluation {
  id        String   @id @default(cuid())
  sessionId String
  profile   Json
  results   Json     // { obligations: [...], hits: [...], explain: [...] }
  createdAt DateTime @default(now())

  session   Session  @relation(fields: [sessionId], references: [id]) // <-- lowercase
}