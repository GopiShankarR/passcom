{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "json-logic-js", "cors", "express"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "prisma/*.ts"]
}
